<style>
    .white-background {
        background-color: #FFFFFF;
    }
    .white-background input,
    .white-background select {
        background-color: rgb(240, 240, 240);;
    }
    .collection-form__container {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    .collection-form__text {
        width: 30%;
    }
    .collection-form__form {
        width: 50%;
        padding: 0;
    }
    .form__label-input {
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5rem;
    }
    .form__label-input input,
    .form__label-input select {
        border-radius: var(--rounded-input);
        height: var(--input-height);
        padding-block-start: var(--spacing-4);
        padding-block-end: var(--spacing-4);
        padding-inline-start: var(--input-padding-inline);
        padding-inline-end: var(--input-padding-inline);
    }
    @media screen and (max-width: 768px) {
        .collection-form__container {
            flex-direction: column;
            gap: 2rem;
        }
        .collection-form__text,
        .collection-form__form {
            width: 100%;
        }
    }
</style>

<div class="section section-boxed bg-custom white-background">
    <div class="collection-form__container">
        <div class="collection-form__text prose">
            <h2 class="h3">{{ section.settings.heading }}</h2>
            <p>{{ section.settings.description }}</p>
        </div>
        <div class="collection-form__form">
            {% form 'contact', id: "collection-inquiry", class: "" %}
                {% liquid 
                    if section.settings.collection != blank
                        assign collection = section.settings.collection
                    endif
                %}
                <div class="form__label-input">
                    <label for="first-name">{{ section.settings.first_name }}</label>
                    <input id="first-name" type="text"/>
                </div>
                <div class="form__label-input">
                    <label for="last-name">{{ section.settings.last_name }}</label>
                    <input id="last-name" type="text"/>
                </div>
                <div class="form__label-input">
                    <label for="collection-product">{{ section.settings.product_select }}</label>
                    <select id="collection-product">
                        {% for product in collection.products %}
                            <option value="{{ product.title }}">{{ product.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="button button--xl">{{ section.settings.btn_text }}</button>
            {% endform %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Collection form",
    "settings": [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Form description"
        },
        {
            "type": "text",
            "id": "first_name",
            "label": "First name label"
        },
        {
            "type": "text",
            "id": "last_name",
            "label": "Last name label"
        },
        {
            "type": "text",
            "id": "product_select",
            "label": "Product select label"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text"
        }
    ],
    "presets": [
        {
            "name": "Collection form"
        }
    ]
}
{% endschema %}